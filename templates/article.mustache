<article id="tip-{{tip_counter}}">
    <header>
        <h1>{{title}}</h1>
        <span class="author"><a href="{{author_url}}">{{author}}</a></span>
        <a class="tip-counter" href="{{url}}">#{{tip_counter}}</a>
    </header>
    {{content}}
	<div class="fb-like" data-send="false" data-layout="button_count" data-width="450" data-show-faces="true"></div>
</article>